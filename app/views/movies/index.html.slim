= content_for :title do "movies" end
= content_for :scripts do
	javascript:
		$(function(){
			window.movies = new BrowseMoviesViewModel(#{@movies.to_json.html_safe}, #{@genres.to_json.html_safe}, #{@decades.to_json.html_safe});
			ko.applyBindings(window.movies);
		});

= render "movie_filters"
= render "movie_list"

div class="selected-movie" data-bind="with: currentMovie, css: { open: currentMovie() != undefined }"
	button data-bind="click: $root.clearMovie" class="close"
	= render "show"
div class="selected-movie" data-bind="with: secondMovie, css: { open: secondMovie() != undefined }"
	button data-bind="click: $root.clearMovie" class="close"
	= render "show"